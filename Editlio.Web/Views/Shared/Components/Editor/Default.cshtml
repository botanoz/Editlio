        height: calc(100vh - 56px);
        font-size: 15px;
    }

    .CodeMirror-fullscreen {
        z-index: 9999;
    }
</style>

<div id="editor-container"></div>

<!-- CodeMirror ve Eklentiler -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/codemirror.min.js"></script>
