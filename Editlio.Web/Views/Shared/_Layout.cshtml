<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Editlio</title>
    
    <!-- CDN Kaynakları -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        .gradient-bg {
            background: linear-gradient(-45deg, #1a1c2b, #2d1b4e, #1b314e, #1b4e3d);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        
        .neon-glow {
            text-shadow: 0 0 10px #7c3aed, 0 0 20px #7c3aed, 0 0 30px #7c3aed;
        }
        
        .card-glow:hover {
            box-shadow: 0 0 15px rgba(124, 58, 237, 0.3);
        }
        
        @@keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .floating {
            animation: floating 3s ease-in-out infinite;
        }
        
        @@keyframes floating {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #1f2937;
        }

        ::-webkit-scrollbar-thumb {
            background: #4c1d95;
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #6d28d9;
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-900/80 backdrop-blur-md fixed w-full z-50 border-b border-purple-900/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-400 neon-glow">
                        Editlio
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="https://buymeacoffee.com/botanoz" target="_blank" 
                       class="flex items-center px-4 py-2 rounded-full bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-medium transition-all hover:scale-105">
                        <i class="fas fa-coffee mr-2"></i>
                        Bana Kahve Ismarla
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 py-12 border-t border-purple-900/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <a href="https://buymeacoffee.com/botanoz" target="_blank" 
               class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-yellow-500 to-yellow-600 text-gray-900 font-medium hover:scale-105 transition-all">
                <i class="fas fa-heart text-red-500 mr-2"></i>
                Projeyi Destekle
            </a>
            <p class="mt-8 text-gray-400">&copy; @DateTime.Now.Year Editlio. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>