<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Editlio</title>
    
    <!-- Core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <style>
        :root {
            --dark-bg: #1a1c2b;
            --dark-secondary: #2d1b4e;
            --purple-accent: #7c3aed;
        }

        body {
            background-color: var(--dark-bg);
            color: #fff;
        }

        .gradient-bg {
            background: linear-gradient(-45deg, #1a1c2b, #2d1b4e, #1b314e, #1b4e3d);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }

        @@keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .navbar {
            background-color: rgba(26, 28, 43, 0.9) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(124, 58, 237, 0.2);
        }

        .navbar-brand {
            background: linear-gradient(45deg, #a78bfa, #60a5fa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 10px rgba(124, 58, 237, 0.3);
        }

        .navbar .nav-link {
            color: rgba(255, 255, 255, 0.8) !important;
        }

        .navbar .nav-link:hover {
            color: #fff !important;
        }

        .navbar .nav-link.active {
            color: #fff !important;
        }

        .btn-coffee {
            background: #fbbf24 !important;
            color: #1a1c2b !important;
            border-radius: 50px !important;
            transition: all 0.3s ease;
        }

        .btn-coffee:hover {
            transform: scale(1.05);
            background: #f59e0b !important;
        }

        .modal-content {
            background-color: #2d1b4e;
            border: 1px solid rgba(124, 58, 237, 0.2);
        }

        .modal-header {
            border-bottom: 1px solid rgba(124, 58, 237, 0.2);
        }

        .modal-footer {
            border-top: 1px solid rgba(124, 58, 237, 0.2);
        }

        .accordion-button {
            background-color: #1a1c2b !important;
            color: #fff !important;
        }

        .accordion-button:not(.collapsed) {
            background-color: #2d1b4e !important;
        }

        .accordion-body {
            background-color: #1a1c2b;
            color: #fff;
        }

        .table {
            color: #fff;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(124, 58, 237, 0.1);
        }

        kbd {
            background-color: #2d1b4e;
            border: 1px solid rgba(124, 58, 237, 0.2);
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #1a1c2b;
        }

        ::-webkit-scrollbar-thumb {
            background: #4c1d95;
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #6d28d9;
        }

        /* Toast düzenlemeleri */
        .toast-success {
            background-color: #059669 !important;
        }

        .toast-error {
            background-color: #dc2626 !important;
        }

        .toast-info {
            background-color: #3b82f6 !important;
        }

        .toast-warning {
            background-color: #d97706 !important;
        }
    </style>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <!-- Navbar Partial -->
    @await Component.InvokeAsync("PageNavbar")
    
    <main class="container-fluid">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        // Toastr ayarları
        toastr.options = {
            closeButton: true, 
            progressBar: true,
            positionClass: "toast-bottom-right", 
            preventDuplicates: true, 
            timeOut: 3000, 
            extendedTimeOut: 1000,
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>