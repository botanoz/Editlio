@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="pt-28 pb-16 gradient-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 data-aos="fade-down" class="text-5xl md:text-6xl font-bold text-purple-300 mb-8 neon-glow">
                Kodunuzu & Metninizi<br />Anında Paylaşın!
            </h1>
            <p data-aos="fade-up" class="text-xl text-gray-300 mb-1 max-w-2xl mx-auto">
                URL'yi özelleştirin veya rastgele oluşturun.
                Tarayıcınıza 
            </p>
            <p data-aos ="fade-up" class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">
                <span class="font-mono bg-purple-900/30 px-2 py-1 rounded text-purple-300">editlio.com/<span id="typing-text"></span></span>
                anında paylaşıma başlayın! 
            </p>
            <p data-aos="fade-up" class="text-xl text-gray-300 mb-3 max-w-2xl mx-auto">
                Veya 
            </p>
            <div data-aos="zoom-in" class="flex flex-col md:flex-row gap-4 justify-center">
                <a href="/generate-slug" class="px-8 py-4 bg-purple-600 text-white rounded-lg font-bold hover:bg-purple-700 transition-all hover:scale-105 shadow-lg shadow-purple-600/50">
                    Hemen Paylaşıma Başla →
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div data-aos="fade-up" class="bg-gray-800/50 p-8 rounded-xl border border-purple-900/50 hover:border-purple-500/50 transition-all floating card-glow">
                <div class="text-purple-400 mb-4 text-4xl">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3 class="text-xl font-bold mb-4 text-purple-300">Anında Paylaşım</h3>
                <p class="text-gray-400">İstediğiniz URL'yi yazın veya rastgele oluşturun. Kayıt olmadan, anında paylaşıma başlayın!</p>
            </div>

            <!-- Feature 2 -->
            <div data-aos="fade-up" data-aos-delay="100" class="bg-gray-800/50 p-8 rounded-xl border border-purple-900/50 hover:border-purple-500/50 transition-all floating card-glow">
                <div class="text-purple-400 mb-4 text-4xl">
                    <i class="fas fa-sync"></i>
                </div>
                <h3 class="text-xl font-bold mb-4 text-purple-300">Canlı İşbirliği</h3>
                <p class="text-gray-400">Ekip arkadaşlarınızla aynı anda düzenleme yapın. Tüm değişiklikler anında senkronize olur.</p>
            </div>

            <!-- Feature 3 -->
            <div data-aos="fade-up" data-aos-delay="200" class="bg-gray-800/50 p-8 rounded-xl border border-purple-900/50 hover:border-purple-500/50 transition-all floating card-glow">
                <div class="text-purple-400 mb-4 text-4xl">
                    <i class="fas fa-image"></i>
                </div>
                <h3 class="text-xl font-bold mb-4 text-purple-300">Dosya & Görsel Paylaşımı</h3>
                <p class="text-gray-400">Kod ve metin yanında dosya ve görsellerinizi de kolayca paylaşın.</p>
            </div>
        </div>
    </div>
</div>

<!-- Coming Soon -->
<div class="py-20 bg-gray-800/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 data-aos="fade-down" class="text-3xl font-bold text-center mb-16 text-purple-300 neon-glow">Yakında Gelecek Özellikler</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div data-aos="fade-right" class="bg-gray-800/50 backdrop-blur p-8 rounded-xl border border-purple-900/50 hover:border-purple-500/50 transition-all card-glow">
                <div class="flex items-center mb-4">
                    <div class="text-purple-400 text-2xl mr-4">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3 class="text-xl font-bold text-purple-300">Şifre Koruması</h3>
                </div>
                <p class="text-gray-400">Özel sayfalarınızı şifre ile koruyun. Yalnızca istediğiniz kişiler düzenleme yapabilsin.</p>
            </div>
            <div data-aos="fade-left" class="bg-gray-800/50 backdrop-blur p-8 rounded-xl border border-purple-900/50 hover:border-purple-500/50 transition-all card-glow">
                <div class="flex items-center mb-4">
                    <div class="text-purple-400 text-2xl mr-4">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h3 class="text-xl font-bold text-purple-300">Salt Okunur Mod</h3>
                </div>
                <p class="text-gray-400">Şifreyi bilmeyen kullanıcılar içeriği yalnızca görüntüleyebilir, düzenleme yapamaz.</p>
            </div>
        </div>
    </div>
</div>

<!-- How to Use -->
<div class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div data-aos="fade-up" class="bg-gray-800/50 p-8 rounded-xl border border-purple-900/50">
            <h2 class="text-3xl font-bold text-center mb-8 text-purple-300">Nasıl Kullanılır?</h2>
            <div class="space-y-6">
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-purple-400 mr-4">1</span>
                    <p class="text-gray-300">Tarayıcınızın adres çubuğuna <span class="font-mono bg-gray-900/50 px-2 py-1 rounded">editlio.com/istediginiz-metin</span> yazın veya hemen başla butonuna tıklayın</p>
                </div>
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-purple-400 mr-4">2</span>
                    <p class="text-gray-300">Otomatik olarak yeni bir paylaşım sayfası oluşturulacak</p>
                </div>
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-purple-400 mr-4">3</span>
                    <p class="text-gray-300">URL'yi ekip arkadaşlarınızla paylaşın ve gerçek zamanlı düzenlemeye başlayın!</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Typing efekti
            new Typed('#typing-text', {
                strings: [
                    'istediğiniz-metni-yazın',
                    'notlarim123',
                    'proje-x',
                    'fikrim-bu',
                    '1gorevimvar',
                    'gunes'
                ],
                typeSpeed: 50,
                backSpeed: 30,
                backDelay: 1500,
                startDelay: 500,
                loop: true,
                showCursor: true,
                cursorChar: '|',
                autoInsertCss: true,
            });
        });
    </script>
}